<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.a18elode.pharmabuy.Acquisto"
    android:id="@+id/drawer"
    android:background="@drawable/sfondo">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="28dp"
        />

    <RelativeLayout
        android:id="@+id/menu_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">


        <!-- <ImageView
             android:id="@+id/logo"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="10dp"
             android:background="@drawable/logo" /> -->
        <ImageView
            android:id="@+id/selected_imageA"
            android:layout_width="85dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="21dp" />
        <TextView
            android:id="@+id/selected_farmacoA"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/selected_imageA"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/selected_imageA"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView_descrizione"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingRight="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/selected_farmacoA"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/descrizioneFarmacoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_farmacoA"
                android:layout_centerHorizontal="true"
                android:background="#4cbe76"
                android:paddingLeft="50dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </ScrollView>

        <ImageView
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/selected_farmacia"
            android:layout_below="@+id/scrollView_descrizione"
            android:background="#ffffff"
            />

        <!--  </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">-->

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/scrollView_descrizione"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/selected_farmacia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/sfondo"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/selected_farmacia"
            android:layout_below="@+id/selected_farmacia"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/selected_farmacia"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/selected_prezzo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/sfondo"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/selected_farmacia"
            android:layout_below="@+id/selected_prezzo"
            android:background="#ffffff"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/selected_prezzo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/selected_ricetta"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <Button
            android:onClick="ShowPopup"
            android:id="@+id/button_acquisto"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/selected_ricetta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="      Acquista"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:drawableLeft="@drawable/cart"
        android:drawableTint="@color/colorText"
            android:paddingLeft="20dp"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_acquisto"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:theme="@style/PopupMenu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>


