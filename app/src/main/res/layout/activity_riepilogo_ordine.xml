<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.a18elode.pharmabuy.Riepilogo"
    android:id="@+id/drawer"
    android:background="@drawable/sfondo">

    <RelativeLayout
        android:id="@+id/menu_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <!--<ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />-->

        <ImageView
            android:id="@+id/confirm_handO"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/orari"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:tint="@color/colorText"
            app:srcCompat="@drawable/confirm_hand" />

        <TextView
            android:id="@+id/textConfirmO"
            android:layout_width="300dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_handO"
            android:layout_centerHorizontal="true"
            android:text="Congratulazioni!\n\nIl tuo ordine è andato a buon fine!\n\nIl medicinale è stato aggiunto al riepilogo degli ordini."
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acquistiRecenti_buttonO"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textConfirmO"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Stato Ordini"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textConfirmO"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/dataRO"
            android:text="Data ritiro: 15-09-2018"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />


    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_riepilogoO"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:theme="@style/PopupMenu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>