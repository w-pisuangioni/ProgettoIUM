<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.a18elode.pharmabuy.Menu"
    android:id="@+id/drawer"
    android:background="@drawable/sfondo">

    <RelativeLayout
        android:id="@+id/menu_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo" />

        <Button
            android:id="@+id/button_medicinali"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/farmacie_button"
            android:layout_below="@+id/logo"
            android:layout_marginTop="60dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Medicinali"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/farmacie_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/button_medicinali"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Farmacie di turno"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/acquistiRecenti_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/farmacie_button"
            android:layout_below="@+id/farmacie_button"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Acquisti Recenti"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/statoOrdini_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/acquistiRecenti_button"
            android:layout_below="@+id/acquistiRecenti_button"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Stato Ordini"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_menu"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:theme="@style/PopupMenu">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
