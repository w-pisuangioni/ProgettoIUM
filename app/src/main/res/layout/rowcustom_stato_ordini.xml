<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/textViewNameSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ffe410"
        android:textSize="21sp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/anteprimaSO"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/textViewDescriptionSO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNameSO"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>
    <TextView
        android:id="@+id/textViewDataSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescriptionSO"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="57dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewFarmaciaSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDataSO"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="57dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewRicettaSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFarmaciaSO"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="57dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />

</LinearLayout>