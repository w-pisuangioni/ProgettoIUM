<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.a18elode.pharmabuy.Riepilogo"
    android:id="@+id/drawer"
    android:background="@drawable/sfondo">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="28dp"
        android:background="#abd7b3"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <!--<ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />-->

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/selected_farmaco_riepilogo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0000e0"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/selected_farmaco_riepilogo"
            android:id="@+id/descrizioneFarmacoR"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/selected_imageR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="90dp"
            />
        <!--  </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">-->

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descrizioneFarmacoR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/selected_farmaciaR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/selected_farmaciaR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:id="@+id/orari"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="lun - ven: 9:00-13:00 / 17:00-20:00\nsab: 9:00 - 13:00"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/orari"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/selected_prezzoR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />


        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_prezzoR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/selected_ricettaR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/selected_ricettaR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/dataR"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataR"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/conferma"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#03b900"
            />


    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_riepilogo"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:theme="@style/PopupMenu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>