<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.a18elode.pharmabuy.Riepilogo"
    android:id="@+id/drawer"
    android:background="@drawable/sfondo">



    <RelativeLayout
        android:id="@+id/menu_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <!--<ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />-->
        <ImageView
            android:id="@+id/confirm_hand"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/orari"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:tint="@color/colorText"
            app:srcCompat="@drawable/confirm_hand" />

        <TextView
            android:id="@+id/textConfirm"
            android:layout_width="300dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_hand"
            android:layout_centerHorizontal="true"
            android:text="Congratulazioni!\n\nIl tuo acquisto è andato a buon fine!\n\nIl medicinale è stato aggiunto ai tuoi acquisti recenti."
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acquistiRecenti_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textConfirm"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttons"
            android:clickable="true"
            android:text="Acquisti Recenti"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <!--  </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">-->

        <TextView
            android:id="@+id/orari"
            android:visibility="gone"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="lun - ven: 9:00-13:00 / 17:00-20:00\nsab: 9:00 - 13:00"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="italic" />

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_riepilogo"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:theme="@style/PopupMenu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>