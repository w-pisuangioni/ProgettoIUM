<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/textViewNameAcquisto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:textColor="#ffffff"
        android:background="#00B945"
        android:textSize="21sp"
        android:paddingLeft="2dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/anteprimaAcquisto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00B945"
            android:padding="1dp"
            />


        <TextView
            android:id="@+id/textViewDescriptionAcquisto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNameAcquisto"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />


    </LinearLayout>
    <TextView
        android:id="@+id/textViewDescriptionDataAcquisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescriptionAcquisto"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="57dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewFarmaciaAcquisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescriptionDataAcquisto"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="57dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"/>
</LinearLayout>